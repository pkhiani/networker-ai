{
  "manifest_version": 3,
  "name": "Networker.ai",
  "version": "2.0",
  "description": "Generate personalized LinkedIn messages.",
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "oauth2": {
    "client_id": "78nj2vdfpzgwi8",
    "scopes": ["r_basicprofile"]
  },
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
